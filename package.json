{
  "name": "@use-form/use-form",
  "author": "Jucian0 <juciano@outlook.com.br>",
  "description": "UseFom provides a way to create complex forms easily.",
  "homepage": "https://useform.org/",
  "version": "0.0.0-development",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/use-form/use-form",
    "homepage": "https://github.com/use-form/use-form"
  },
  "keywords": [
    "react",
    "hooks",
    "form",
    "forms",
    "form-validation",
    "validation",
    "typescript",
    "react-hooks"
  ],
  "module": "dist/use-form.esm.js",
  "size-limit": [
    {
      "path": "dist/use-form.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/use-form.esm.js",
      "limit": "10 KB"
    }
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build && husky install",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "pre-commit": "lint-staged",
    "commit": "git-cz"
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "git add",
      "eslint --ext .jsx --ext .js --ignore-path .gitignore"
    ],
    "*.{js,css,md}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@size-limit/preset-small-lib": "^4.10.2",
    "@testing-library/jest-dom": "^5.8.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/react-hooks": "^3.2.1",
    "@testing-library/user-event": "^10.3.5",
    "@types/react": "^16.9.55",
    "@types/react-dom": "16.0.5",
    "@types/yup": "^0.29.0",
    "commitizen": "^4.2.3",
    "commitlint": "^12.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "^17.0.2",
    "semantic-release": "^17.4.2",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "dot-prop-immutable": "^2.1.0",
    "yup": "^0.29.0"
  },
  "peerDependencies": {
    "react": "17.0.2"
  }
}